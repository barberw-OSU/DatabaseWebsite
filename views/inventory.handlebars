 <h1 id="title">Inventory Management</h1>
  <div class="outside">
  <!--Main Layout-->
  <main>
    <!-- Main Navigation-->
    <header>
      <div class="link">
        <a href="/">Home</a>
      </div>
      <div class="link">
        <a href="">Manage Inventory</a>
      </div>
      <div class="link">
        <a href="order.handlebars">Manage Orders</a>
      </div>
      <div class="link">
        <a href="customer.handlebars">Manage Customers</a>
      </div>
    </header>

    <section class="tableWrapper">
      <h2>Current Inventory</h2>
      <input type="text" id="myInput" placeholder="Search for names.." title="Type in a name">
      <table>
         <tr class="tableHeader">
          <th>Item</th>
          <th>Type</th>
          <th>Price</th>
          <th>Number in Stock</th>
        </tr>
        <tbody>
          {{#each items}}
          <tr>
            <td hidden>{{item_Num}}</td>
            <td>{{item_Type}}</td>
            <td>{{item_Name}}</td>
            <td>{{item_Price}}</td>
            <td>{{number_Items_In_Stock}}</td>
            <th>
              <button onclick="editItem({{item_Num}})">Edit</button>
              <button onclick="deleteItem({{item_Num}})">Delete</button>
            </th>
          </tr>
          {{/each}}
        </tbody>
      </table>
      <button class="add" onclick="window.location.href='/add'">Add New Inventory</button>
    </section>
  </div>
  </main>

  <script>
        function deleteItem(item_Num){
        $.ajax({
            url: '/inventory/' + item_Num,
            type: 'DELETE',
            success: function(result){
                window.location.reload(true);
            }
        })
    };
  </script>