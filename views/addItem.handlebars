      </div>
    </header>
    <section  class="formWrapper">
      <h2>Add Item to Inventory</h2>
      <form method="post" ,class="orderForm">
          <div class="row">
            <h2>Item Type</h2>
            <h2>Item Name</h2>
            <h2>Item Price</h2>
            <h2>Number In Stock</h2>
          </div>
          <div class="row">
            <div class="col"> 
              <span>1.</span><input type="text" name="itemType"> 
            </div>
            <div class="col">
                <input type="text" name="itemName"> 
            </div>
            <div class="col">
              <span>$</span><input type="number" min=0 step="0.01" name="price">
            </div>
            <div class="col">
              <input type="number" min=0 step="1" name="quantity">
            </div>
          </div>
        <input  class = "submit" type="submit" name="Submit" value=Submit>
      </form>
    </section> 
  </div>
  </main>