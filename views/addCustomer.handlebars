  <h1 id="title">Customer Management</h1>
  <div class="outside">
    <!--Main Layout-->
    <main>
      <!-- Main Navigation-->
      <header>
        <div class="link">
          <a href="/">Home</a>
        </div>
        <div class="link">
          <a href="inventory.handlebars">Manage Inventory</a>
        </div>
        <div class="link">
          <a href="order.handlebars">Manage Orders</a>
        </div>
        <div class="link">
          <a href="customer.handlebars">Manage Customers</a>
        </div>
      </header>
  
    <div class="row">
      <div class="col-75">
        <div class="container">

            <div class="row">
              <div class="col-50">
                <h2>New Customer Form</h2>
                <h3>Billing Address</h3>
                <form class="form2">
                <p class="billingaddress">
                	<label for="fname">First Name</label>
                	<input type="text" id="fname" name="firstname:required" placeholder="First Name">
                	<label for="lname">Last Name</label>
                	<input type="text" id="fname" name="firstname:required" placeholder="Last Name">
                  <label class="control-label">Date of Birth</label>
                  <input class="form-control" id="date" name="date" placeholder="MM/DD/YYY"/>
                </p>

                <label for="email">Email</label>
                <input type="text" id="email" name="email" placeholder="Email Address Here">

                <label for="adr">Address</label>
                <input type="text" id="adr" name="address" placeholder="Address Here">
                <label for="city">City</label>
                <input type="text" id="city" name="city" placeholder="City Here">

                <label for="state">State</label>
                <input type="text" id="state" name="state" placeholder="State Here">

                <label for="zip">Zip</label>
                <input type="text" id="zip" name="zip" placeholder="Zip Here">

              </div>



              <div class="col-50">
                <h3>Payment Type</h3>

                <label for="cname">Name on Card</label>
                <input type="text" id="cname" name="cardname" placeholder="Name As Written On Card">
                <label for="ccnum">Credit card number</label>
                <input type="text" id="ccnum" name="cardnumber" placeholder="Enter Card Number With Dashes">
                <label for="expmonth">Exp Month</label>
                <input type="text" id="expmonth" name="expmonth" placeholder="Month">
                <div class="row">
                  <div class="col-50">
                    <label for="expyear">Exp Year</label>
                    <input type="text" id="expyear" name="expyear" placeholder="Year">
                  </div>
                  <div class="col-50">
                    <label for="cvv">CVV</label>
                    <input type="text" id="cvv" name="cvv" placeholder="CVV">
                  </div>
                </div>
              </div>
            </div>
          <input type="submit" name="submit" value="Submit">
          <br>
    		  <input id="checkbox-1" class="checkbox-custom" name="checkbox-1" type="checkbox" checked>
    		  <label for="checkbox-1" class="checkbox-custom-label">Shipping same as billing</label>

    	</form>
        </div>
      </div>
    </div>

  </main>